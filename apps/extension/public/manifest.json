{
  "manifest_version": 3,
  "name": "Veritas: Misinformation Detector",
  "version": "0.1.0",
  "description": "Identify misinformation and bias in web articles.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*",
    "https://*.auth0.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Open Veritas"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
